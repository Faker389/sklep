<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#121212"
        android:padding="16dp">

        <!-- Level Information Layout -->

        <LinearLayout
            android:id="@+id/levelBarLayout"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Current Level Text -->
            <TextView
                android:id="@+id/currentLevelText"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textAlignment="textEnd"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="28sp" />

            <!-- ProgressBar for the Level Bar -->
            <ProgressBar
                android:id="@+id/customProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="297dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/custom_progress_bar" />

            <!-- Next Level Text -->
            <TextView
                android:id="@+id/nextLevelText"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="28sp" />
        </LinearLayout>

        <!-- Bottom Navigation Bar with 4 Circular Image Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <!-- First Navigation Button -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/navButton1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/circular_background_selected"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_home"
                    tools:srcCompat="@drawable/ic_home" />
            </FrameLayout>

            <!-- Second Navigation Button -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/navButton2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_home"
                android:background="@drawable/circular_background" />
            </FrameLayout>

            <!-- Third Navigation Button -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/navButton3"
                    android:layout_width="50dp"
                    android:padding="5dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_home"
                android:background="@drawable/circular_background" />
            </FrameLayout>

            <!-- Fourth Navigation Button -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/navButton4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_home"
                    android:padding="5dp"
                android:background="@drawable/circular_background" />
            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
